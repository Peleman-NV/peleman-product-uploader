<?php

declare(strict_types=1);

namespace PelemanProductUploader\Includes\MegaMenu;

class MegaMenuItem extends MenuItem
{
    private int $columnCount;
    private array $columnWidths;
    private int $columnIndex;
    private bool $isHeading;

    public function __construct(string $title, string $attr_title, int $position, string $status = 'publish')
    {
        parent::__construct($title, $attr_title, $position, $status);
        $this->columnCount = 0;
        $this->columnWidths = [];
        $this->columnIndex = 0;
        $this->isHeading = false;
    }

    public function set_column_count(int $columns): self
    {
        $this->columnCount = $columns;
        return $this;
    }

    public function set_column_width(int $index, int $width): self
    {
        $this->column[$index] = $width;
        return $this;
    }

    public function set_column_index(int $index): self
    {
        $this->columnIndex = $index;
        return $this;
    }

    public function set_as_heading_text(bool $isHeading = true): self
    {
        $this->isHeading = $isHeading;
        return $this;
    }
}
